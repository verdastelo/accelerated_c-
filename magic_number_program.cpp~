// Magic number program. 

#include <iostream> 
#include <cstdlib> 

using namespace std; 

int main(void) {
    int magic = 0; 
    int guess = 0; 
    
    magic = rand(); 
    
    cout << "Enter the guess: \n"; 
    cin >> guess; 
    
    if (guess == magic) {
        cout << " *** Right *** " << endl; 
        cout << magic << " is the magic number." << endl; 
        }
    else {
        cout << "Sorry, you are wrong." << endl; 
        }
    return 0; 
    }
