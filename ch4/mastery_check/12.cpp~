/*
    This program counts uppercase letters in a string and 
    displays the result. 
*/ 


#include <iostream> 

int main()
{
    char sen[100];
    int count = 0; 
    
    std::cout << "Please enter your word: " << std::endl; 
    std::cin >> sen; 
    
    for (int i = 0; sen[i]; i++) {
        if (sen[i] == toupper(sen[i])) {
            count++; 
            }
        } 
    
    std::cout << "There are " << count << " uppercase letters " 
              << "in " << sen << std::endl; 
    
    return 0; 
}
