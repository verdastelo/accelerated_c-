/*
    Is the following fragment valid? 
        for (int i = 0; i < num; i++) 
            sum += i; 
        count = i; 
        */
        
#include <iostream> 

int main() {
    std::cout << "\t Yes, the statement is valid if num, sum and count are declared integers elsewhere in the program. "
    << std::endl; 
    return 0; 
    }
